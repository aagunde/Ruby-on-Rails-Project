<h1>List of Participants</h1>

<style>
h1{

text-align:center;
}

body{

background-image:url("assest/2.jpg");

}


</style>

<table border="1" style="width:100%">
  <thead>
    <tr>
      <th>Name</th>
      <th>College</th>
      <th>Interested Event</th>
      <th>Year of Engineering</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @participants.each do |participant| %>
      <tr>
        <td><%= participant.name %></td>
        <td><%= participant.college %></td>
        <td><%= participant.interested_event %></td>
        <td><%= participant.year_of_engg %></td>
        <td><%= link_to 'Show', participant %></td>
        <td><%= link_to 'Edit', edit_participant_path(participant) %></td>
        <td><%= link_to 'Destroy', participant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Participant', new_participant_path %>
